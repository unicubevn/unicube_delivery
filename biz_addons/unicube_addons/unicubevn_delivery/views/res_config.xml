<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_delivery" model="ir.ui.view">
            <field name="name">res.config.settings.delivery</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_stock_production_lot']" position="attributes">
                    <attribute name="value">True</attribute>
                </xpath>
                 <xpath expr="//field[@name='group_lot_on_delivery_slip']" position="attributes">
                    <attribute name="value">True</attribute>
                </xpath>
                <xpath expr="//field[@name='group_stock_tracking_owner']" position="attributes">
                    <attribute name="value">True</attribute>
                </xpath>
                <xpath expr="//field[@name='group_stock_multi_locations']" position="attributes">
                    <attribute name="value">True</attribute>
                </xpath>
                 <xpath expr="//field[@name='group_product_variant']" position="attributes">
                    <attribute name="value">True</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>